<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/chatSettingsBackground"
    app:columnCount="4"
    app:rowCount="4"
    android:paddingStart="12dp"
    android:paddingLeft="12dp"
    android:paddingEnd="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Row 1-->
    <ImageView
        android:id="@+id/ivHomework"
        android:src="@drawable/ic_homework"
        app:layout_columnWeight="1"/>

    <ImageView
        android:id="@+id/ivTextbooks"
        android:src="@drawable/ic_textbooks"
        app:layout_columnWeight="1"/>

    <ImageView
        android:id="@+id/ivCalendar"
        android:src="@drawable/ic_calendar"
        app:layout_columnWeight="1"/>

    <ImageView
        android:id="@+id/ivMynotes"
        android:src="@drawable/ic_my_notes"
        app:layout_columnWeight="1"/>

    <!-- Row 2 -->

    <ImageView
        android:id="@+id/ivCamera"
        android:layout_marginTop="16dp"
        app:layout_columnWeight="1"
        android:src="@drawable/ic_camera"/>

    <ImageView
        android:id="@+id/ivCalculator"
        android:layout_marginTop="16dp"
        app:layout_columnWeight="1"
        android:src="@drawable/ic_calculator"/>

    <ImageView
        android:id="@+id/ivWikipedia"
        android:layout_marginTop="16dp"
        app:layout_columnWeight="1"
        android:src="@drawable/ic_wikipedia"/>


</android.support.v7.widget.GridLayout>
